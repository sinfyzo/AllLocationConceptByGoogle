<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.alllocationconceptbygoogle.MainActivity">

    <Button
        android:id="@+id/btnBasicLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Basic Location"/>
    <Button
        android:id="@+id/btnLocationAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Location Address"/>
    <Button
        android:id="@+id/btnLocationServiceForeground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Location Service Foreground"/>
</LinearLayout>
